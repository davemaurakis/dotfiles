# Brewfile - Homebrew dependencies for dotfiles
# Install with: brew bundle install

# Core utilities
brew "git"                      # Version control
brew "zsh"                      # Shell (dotfiles configured for zsh)
brew "fzf"                      # Fuzzy finder (used in vim and zsh)

# Search tools
brew "ripgrep"                  # Fast search tool (rg, used by FZF)
brew "the_silver_searcher"      # Alternative fast search tool (ag)
brew "ack"                      # Code search tool (ack.vim plugin)

# Editors
brew "neovim"                   # Modern vim fork
brew "vim"                      # Classic vim editor

# Development tools
brew "kubernetes-cli"           # Kubernetes CLI (kubectl)

# Optional but recommended
# brew "the_silver_searcher"    # Alternative search tool (ag)
# brew "tree"                   # Directory tree view
# brew "htop"                   # System monitor
# brew "jq"                     # JSON processor

# GUI Applications (casks)
# cask "iterm2"                 # Terminal emulator (you have iTerm config)
# cask "visual-studio-code"     # Code editor
# cask "docker"                 # Container platform
